<h1>게시판입니다</h1>
<a href= "/posts/new">새 글쓰기</a>

<table>
    <tr>
        <th>ID </th>
        <th>제목 </th>
        <th>작성날짜 </th>
    </tr>
    <!--<반복되는파트>-->

    <% @posts.each do |p| %>
        <tr>
            <td><%=p.id %></td>
            <td><a href="/posts/show/<%= p.id %>"><%= p.title %></a></td>
            <td><%= p.created_at %>></td>
        </tr>
    <% end %>

</table>
<!--@posts에  들어있는 모든 게시글을 보여준다. -->

